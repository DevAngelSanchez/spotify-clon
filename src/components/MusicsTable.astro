---
import TimeIcon from "@/icons/Time.astro";
import { type Song } from "@/libs/data";

interface Props {
  songs: Song[];
}

const { songs } = Astro.props;
---

<table
  class="table-auto text-left min-w-full divide-y divide-gray-500/20 font-light"
>
  <thead>
    <tr class="text-zinc-400 text-sm">
      <th class="px-4 py-2 font-light">#</th>
      <th class="px-4 py-2 font-light">Titulo</th>
      <th class="px-4 py-2 font-light">Album</th>
      <th class="px-4 py-2 font-light"><TimeIcon /></th>
    </tr>
  </thead>
  <tbody>
    <tr class="h-4"></tr>
    {
      songs.map((song, index) => (
        <tr class="text-gray-300 text-sm font-light hover:bg-white/10 overflow-hidden border-separate border-spacing-0 cursor-pointer transition duration-200">
          <td class="px-4 py-2 rounded-tl-lg rounded-bl-lg w-5">{index + 1}</td>
          <td class="px-4 py-2 flex gap-2">
            <picture class="">
              <img
                src={song.image}
                alt={song.title}
                class="w-11 h-11 rounded-md"
              />
            </picture>
            <div class="flex flex-col">
              <h3 class="text-base text-white font-normal">{song.title}</h3>
              <span class="text-xs">{song.artists.join(", ")}</span>
            </div>
          </td>
          <td class="px-4 py-2">{song.album}</td>
          <td class="px-4 py-2 rounded-tr-lg rounded-br-lg">{song.duration}</td>
        </tr>
      ))
    }
  </tbody>
</table>
